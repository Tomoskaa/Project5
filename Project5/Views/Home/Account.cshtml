
@{
    ViewBag.Title = "Account";
}
<div class="container-fluid mx-2 my-3">
    <div class="bg-light p-5">
        <h5 style="font-size: 25px">Home / <span class="text-warning"> Account</span></h5>
    </div>

    <div class="row mt-5">
        <div class="col-6">
            <h3 class="text-warning text-center">Login</h3>
            <form class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" placeholder="Email">
                <label>Password:</label>
                <input type="password" class="form-control" placeholder="Password">
                <input class="mt-3" type="checkbox" value="">
                <label class="form-check-label">
                    Remember me?
                </label>

                <button type="submit" class="btn btn-warning form-control mt-3">Login</button>
            </form>
        </div>
        <div class="col-6">
            <h3 class="text-warning text-center">Register</h3>
            <form class="form-group">
                <div class="row">
                    <div class="col">
                        <label>First Name:</label>
                        <input type="text" class="form-control" placeholder="First Name">
                    </div>
                    <div class="col">
                        <label>Last Name:</label>
                        <input type="text" class="form-control" placeholder="Last Name">
                    </div>
                </div>
                <label>Email:</label>
                <input type="email" class="form-control" placeholder="Email">
                <label>Password:</label>
                <input type="password" class="form-control" placeholder="Password">
                <label>Repeat Password:</label>
                <input type="password" class="form-control" placeholder="Repeat password">
                <input class="mt-3" type="checkbox" value="">
                <label class="form-check-label">
                    I accept the Terms of Use & Privacy Policy.
                </label>

                <button type="submit" class="btn btn-warning form-control mt-3">Register</button>
            </form>
        </div>
    </div>
</div>

<div class="container-fluid bg-light">
    <div class="w3l-subscribe-content text-center bg-clr-white py-md-5 py-2">
        <div class="py-4">
            <i class="text-warning mr-5 fas fa-envelope" style="font-size: 55px"></i>
            <h3 class="section-title-left my-2">Subscribe to our newsletter!</h3>
            <p class="">We'll send you the best of our blog just once a month. We promise. </p>
            <form class="form-inline" style="margin-left: 38%;">
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Your Email">
                </div>
                <div class="form-group">
                    <button class="btn btn-warning" type="button">Subscribe</button>
                </div>
            </form>
        </div>
    </div>
</div>