@model Project5.Models.News

@{
    ViewBag.Title = "GetNewsList";
}

<div class="container-fluid bg-light my-3">
    <div class="p-5">
        <h5 style="font-size: 25px">Home / <span class="text-warning">Categories</span></h5>
    </div>
</div>

<div class="container-fluid bg-light pb-5">
    <h3 class="text-warning ml-4 pt-3">Filter News</h3>
    @using (Html.BeginForm("GetNewsListPartial", "Home", FormMethod.Post))
    {
        <div class="row mx-3">

            <div class="col-4">
                <form class="form-group">
                    <label class="">Category: </label>
                    @*Html.TextBox("searchCategory", null, new { @class = "form-control" })*@
                    @Html.EditorFor(model => model.Category.Name, new { htmlAttributes = new { @class = "form-control" } })
                </form>
            </div>

            <div class="col-4">
                <label>Title</label>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="col-4">
                <label>Description</label>
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
            </div>

            <br />

            <div class="col-4">
                <span>From date:</span>
                <input type="date" name="from" class="form-control" />
            </div>

            <div class="col-4">
                <span>To date:</span>
                <input type="date" name="to" class="form-control" />
            </div>

            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-warning mt-4 form-control" />
            </div>
        </div>
      }
</div>

<div class="container mt-3">
    <div class="row" style="position: relative; margin-left: 88%">
        <h6 class="text-warning ">Result: 10</h6>
        <a href="#" class="ml-3 text-warning"><i class="fas fa-th-list fa-lg mr-1"></i></a>
        <a href="#" class="text-warning"><i class="fas fa-th-large fa-lg"></i></a>
    </div>
    <div class="row mb-2" style="max-width:12%; position: relative; margin-left: 88%;">
        <select class="form-control">
            <option>Sort By</option>
            <option>Latest</option>
            <option>Popular</option>

        </select>
    </div>

        @Html.Action("GetNewsListPartial", "Home")
